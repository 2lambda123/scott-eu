<?xml version="1.0"?>

<launch>

  <arg name="frame_id" default="lidar_link" />
  <arg name="min_ang" default="-2.26893" />
  <arg name="max_ang" default="2.26893" />

  <node name="sick_tim551_2050001" pkg="sick_tim" type="sick_tim551_2050001" respawn="false" output="screen">
    <remap from="scan" to="turtlebot2i/lidar/scan"/>
    <param name="frame_id" type="str" value="$(arg frame_id)" />
    <param name="min_ang" type="double" value="$(arg min_ang)" />
    <param name="max_ang" type="double" value="$(arg max_ang)" />
  </node>

  <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter">
    <rosparam command="load" file="$(find hokuyo_node)/cfg/hokuyo_config.yaml" />    
  </node>

</launch>
