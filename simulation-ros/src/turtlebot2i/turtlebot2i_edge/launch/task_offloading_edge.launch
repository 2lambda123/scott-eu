<launch>
    <arg name="robot_name" default="turtlebot2i"/>

    <include file="$(find turtlebot2i_edge)/launch/network_monitor_edge.launch"/>

    <group ns="edge">
        <include file="$(find turtlebot2i_scene_graph)/launch/scene_graph_generator.launch">
            <arg name="robot_name" value="$(arg robot_name)"/>
            <arg name="vrep_host" value="global"/>
            <arg name="vrep_port" value="20000"/>
            <arg name="mode" value="service"/>
        </include>

        <node name="scene_graph_proxy" pkg="turtlebot2i_edge" type="scene_graph_proxy.py" ns="$(arg robot_name)"
              output="screen"/>
    </group>
</launch>